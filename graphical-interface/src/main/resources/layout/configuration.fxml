                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="descriptorButton" mnemonicParsing="false" onAction="#onDescriptorButton" text="Visualiser" />
               </children>
            </HBox>
                <VBox alignment="CENTER" prefHeight="45.0" prefWidth="720.0">
                    <children>
                        <Button fx:id="validButton" mnemonicParsing="false" onAction="#onValidButton" text="Valider" />
