      <children>
         <HBox alignment="CENTER" spacing="24.0">
            <children>
            
                <ImageView fx:id="imageMenu" fitHeight="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/logo-simple.png" />
                </ImageView>
