  <ImageView fitHeight="24" fitWidth="24" onMouseClicked="#onParamButton" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
      <Image url="@../images/icons/settings.png" />
  </ImageView>

   <stylesheets>
      <URL value="@../stylesheets/main-menu.css" />
      <URL value="@../stylesheets/theme.css" />
   </stylesheets>

</AnchorPane>
