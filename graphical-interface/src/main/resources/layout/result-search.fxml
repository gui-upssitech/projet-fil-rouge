<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane onKeyPressed="#onEscapeAction" prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.miniteldo.search.controller.SearchController">
    <children>
        <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <VBox spacing="12.0" SplitPane.resizableWithParent="false">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                            <children>
                                <ImageView fitHeight="24.0" fitWidth="24.0" onMouseClicked="#onReturnButton"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../images/icons/arrow-left.png"/>
                                    </image>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </ImageView>
                                <TextField fx:id="requestLabel" onKeyPressed="#onEnterAction" promptText="RequÃªte"
                                           HBox.hgrow="ALWAYS"/>
                                <Button fx:id="fileButton" mnemonicParsing="false" onAction="#onFileButton">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/icons/file.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButton">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/icons/save.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButton">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../images/icons/search.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0"/>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                                    styleClass="result-list-container" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="resultContainer" spacing="12.0"/>
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                </VBox>
                <VBox fx:id="previewBox" alignment="CENTER" styleClass="result-preview-box"
                      SplitPane.resizableWithParent="false">
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </children>
    <stylesheets>
        <URL value="@../stylesheets/theme.css"/>
        <URL value="@../stylesheets/result-search.css"/>
    </stylesheets>
</AnchorPane>
