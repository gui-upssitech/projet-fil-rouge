<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefWidth="300.0" spacing="12.0" stylesheets="@../stylesheets/theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.miniteldo.search.controller.LoginController">
    <children>
        <Label fx:id="labelLogin" text="Login">
            <VBox.margin>
                <Insets top="12.0" />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="18.0" />
            </font></Label>
      <Label fx:id="labelError" />
      <PasswordField fx:id="passwordField" onKeyPressed="#onEnterAction" promptText="Veuillez saisir votre mot de passe" />
      <HBox alignment="CENTER" prefHeight="41.0" prefWidth="696.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelAction" prefWidth="100.0" text="Annuler">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="okButton" mnemonicParsing="false" onAction="#onOkButton" prefWidth="100.0" text="Valider">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
