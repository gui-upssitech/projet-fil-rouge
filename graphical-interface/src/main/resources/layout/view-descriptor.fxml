<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane onKeyPressed="#onKeyAction" prefHeight="400.0" prefWidth="600.0" stylesheets="@../stylesheets/theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.miniteldo.search.controller.DescriptorController">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Visualiser descripteurs" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="25.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" prefHeight="370.0" prefWidth="720.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="329.0" prefWidth="155.0">
                            <children>
                                <HBox alignment="CENTER" prefHeight="51.0" prefWidth="100.0">
                                    <children>
                                        <Button fx:id="fileButton" mnemonicParsing="false" onAction="#onFileButton">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/icons/file.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                            <HBox.margin>
                                                <Insets right="10.0" />
                                            </HBox.margin>
                                        </Button>
                                        <TextField fx:id="fileField" prefHeight="42.0" prefWidth="101.0" promptText="Fichier" />
                                    </children>
                                </HBox>
                        <TextField fx:id="idTextField" alignment="TOP_LEFT" prefHeight="18.0" prefWidth="155.0" promptText="ID">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="labelTime" text="Time code" visible="false">
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                                <Spinner fx:id="spinner" editable="true" visible="false">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Spinner>
                              <Button fx:id="visualiserButton" mnemonicParsing="false" onAction="#onVisualiserAction" prefHeight="41.0" prefWidth="116.0" text="Visualiser">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                              </Button>
                            </children>
                        </VBox>
                        <ScrollPane prefHeight="350.0" prefWidth="526.0">
                            <content>
                                <VBox fx:id="descriptorContainer" />
                            </content>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </ScrollPane>
                    </children>
                </HBox>
            </children>
        </VBox>
        <ImageView fx:id="returnButton" fitHeight="24.0" fitWidth="24.0" onMouseClicked="#onReturnButton" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="16.0">
            <image>
                <Image url="@../images/icons/arrow-left.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
    </children>
</AnchorPane>
